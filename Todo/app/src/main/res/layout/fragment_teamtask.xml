<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        style="@style/selfAndteamMenuBtn_style"
        android:drawableStart="@mipmap/today"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btnToday"
        android:onClick="onClick_btnToday"
        android:text="今日待办"/>
    <Button
        style="@style/selfAndteamMenuBtn_style"
        android:drawableStart="@mipmap/tomorrow"
        android:layout_marginBottom="1dp"
        android:id="@+id/btnTomorrow"
        android:onClick="onClick_btnTomorrow"
        android:text="明日待办"/>
    <Button
        style="@style/selfAndteamMenuBtn_style"
        android:drawableStart="@mipmap/next"
        android:id="@+id/btnNext"
        android:onClick="onClick_btnNext"
        android:text="下一步行动"/>

    <Button
        style="@style/selfAndteamMenuBtn_style"
        android:drawableStart="@mipmap/project"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btnProject"
        android:onClick="onClick_btnProject"
        android:text="项目"/>
    <Button
        style="@style/selfAndteamMenuBtn_style"
        android:drawableStart="@mipmap/teamname"
        android:id="@+id/btnTeamname"
        android:onClick="onClick_btnTeamname"
        android:text="小组名称"/>

    <Button
        style="@style/selfAndteamMenuBtn_style"
        android:layout_marginTop="20dp"
        android:id="@+id/btnMyTeam"
        android:drawableLeft="@mipmap/teamname"
        android:onClick="onClick_btnMyTeam"
        android:text="我的小组"/>
</LinearLayout>