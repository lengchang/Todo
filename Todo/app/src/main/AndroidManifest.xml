<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.linukey.todo">

    <application
        android:icon="@mipmap/todo_icon"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:name="com.example.linukey.BLL.TodoHelper"
        android:supportsRtl="true"
        android:theme="@style/my_theme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:label="登录">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:label="注册">
            <intent-filter>
                <action android:name="com.linukey.Todo.RegisterActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AddSelfpgsActivity"
            android:theme="@style/my_theme">
            <intent-filter>
                <action android:name="com.linukey.Todo.AddSelfpgsActivity" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".AddSelfTaskActivity"
            android:theme="@style/my_theme">
            <intent-filter>
                <action android:name="com.linukey.Todo.AddSelfTaskActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".SelfMenuPGSActivity">
            <intent-filter>
                <action android:name="com.linukey.Todo.SelfMenuPGSActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".SelfMenuTaskActivity">
            <intent-filter>
                <action android:name="com.linukey.Todo.SelfMenuTaskActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".LaunchActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.example.linukey.DAL.SelfTaskContentProvider"
            android:authorities="com.linukey.Todo.self_task"/>
        <provider
            android:name="com.example.linukey.DAL.UserContentProvider"
            android:authorities="com.linukey.Todo.user"/>
        <provider
            android:authorities="com.linukey.Todo.project"
            android:name="com.example.linukey.DAL.ProjectContentProvider"/>
        <provider
            android:authorities="com.linukey.Todo.goal"
            android:name="com.example.linukey.DAL.GoalContentProvider"/>
        <provider
            android:authorities="com.linukey.Todo.sight"
            android:name="com.example.linukey.DAL.SightContentProvider"/>
    </application>

</manifest>