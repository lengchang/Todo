<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.linukey.todo">

    <application
        android:icon="@mipmap/icon"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/my_theme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="com.linukey.Todo.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:label="登录">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:label="注册">
            <intent-filter>
                <action android:name="com.linukey.Todo.RegisterActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AddSelfActivity"
            android:theme="@style/my_theme">
            <intent-filter>
                <action android:name="com.linukey.Todo.AddSelfActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider android:name="com.example.linukey.DAL.SelfTaskContentProvider"
            android:authorities="com.linukey.Todo.self_task"/>
        <provider android:name="com.example.linukey.DAL.UserContentProvider"
            android:authorities="com.linukey.Todo.user"/>
    </application>

</manifest>